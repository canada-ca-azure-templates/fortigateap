        {
            "namespace": "pspc",
            "members": {
                "replaceInObject": {
                    "parameters": [
                        {
                            "name": "object",
                            "type": "object"
                        },
                        {
                            "name": "search",
                            "type": "string"
                        },
                        {
                            "name": "replace",
                            "type": "string"
                        }
                    ],
                    "output": {
                        "type": "object",
                        "value": "[json(replace(string(parameters('object')), parameters('search'), parameters('replace')))]"
                    }
                }
            }
        }
