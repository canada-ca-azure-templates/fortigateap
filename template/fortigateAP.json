        "publicIP3ID": "[resourceID(parameters('fwObject').publicIP3AddressResourceGroup,'Microsoft.Network/publicIPAddresses',parameters('fwObject').publicIP3AddressName)]",
        "NSGName": "[concat(parameters('fwObject').FortiGateNamePrefix,'-',uniqueString(resourceGroup().id),'-NSG')]",
        "internalLBName": "[concat(parameters('fwObject').FortiGateNamePrefix,'-InternalLoadBalancer')]",
        "internalLBFE2Name": "[concat(parameters('fwObject').FortiGateNamePrefix,'-ILB-',parameters('fwObject').Subnet2Name,'-FrontEnd')]",
        "internalLBBE2Name": "[concat(parameters('fwObject').FortiGateNamePrefix,'-ILB-',parameters('fwObject').Subnet2Name,'-BackEnd')]",
